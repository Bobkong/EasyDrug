<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easydrug">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.EasyDrug">

        <activity android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".activity.ScanDrugActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".activity.SpeechFoodActivity" />
        <activity android:name=".activity.DrugDetailActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activity.OnboardingActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.OnBoardingScanDrugActivity" />
        <activity android:name=".activity.CheckListActivity" />
        <activity android:name=".activity.SpeechFoodResultActivity"/>
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.DefinitionActivity"/>
        <activity android:name=".activity.FoodInteractionActivity" />
        <activity android:name=".activity.ExploreActivity" />
        <activity android:name=".activity.DrugListActivity" />
        <activity android:name=".activity.FeedbackActivity" />


    </application>

</manifest>